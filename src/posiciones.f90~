module change_positions
  
  private

  public change_positiones

contains
  
  subroutine change_positions(forces, positions, velocity, N, boxes, timestep)

    real(8), intent(inout) :: forces(3,32)
    real(8), intent(inout) :: positions(3,32)
    real(8), intent(inout) :: velocity(3,32)
    integer, intent(in) :: N, boxes, timestep, mass

    real(8) :: x, y, z
    integer :: i, j

    do i = 1, N
       positions(1,i) = positions(1,i) + velocity(1,i)*timestep + (0.5)*forces(1,i)*(1/mass)*(timestep)**2
       positions(2,i) = positions(2,i) + velocity(2,i)*timestep + (0.5)*forces(2,i)*(1/mass)*(timestep)**2
       positions(3,i) = positions(3,i) + velocity(3,i)*timestep + (0.5)*forces(3,i)*(1/mass)*(timestep)**2


    end do 

end module change_positions
